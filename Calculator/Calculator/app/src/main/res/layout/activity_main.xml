<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:padding="20dp">


    <TextView
        android:id="@+id/screen"
        android:layout_width="391dp"
        android:layout_height="213dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:paddingHorizontal="35dp"
        android:paddingVertical="35dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="60dp"
        android:textStyle="bold"
        android:visibility="visible"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/nums"
        android:layout_width="wrap_content"
        android:layout_height="779dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-279dp"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/on"
                    style="@style/Button1"
                    android:text="ON" />

                <Button
                    android:id="@+id/num7"
                    style="@style/Button2"
                    android:text="7" />

                <Button
                    android:id="@+id/num4"
                    style="@style/Button2"
                    android:text="4" />

                <Button
                    android:id="@+id/num1"
                    style="@style/Button2"
                    android:text="1" />

                <Button
                    android:id="@+id/del"
                    style="@style/Button1"
                    android:text="DEL" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/off"
                    style="@style/Button1"
                    android:text="OFF" />

                <Button
                    android:id="@+id/num8"
                    style="@style/Button2"
                    android:text="8" />

                <Button
                    android:id="@+id/num5"
                    style="@style/Button2"
                    android:text="5" />

                <Button
                    android:id="@+id/num2"
                    style="@style/Button2"
                    android:text="2" />

                <Button
                    android:id="@+id/num0"
                    style="@style/Button2"
                    android:text="0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/ac"
                    style="@style/Button1"
                    android:text="AC" />

                <Button
                    android:id="@+id/num9"
                    style="@style/Button2"
                    android:text="9" />

                <Button
                    android:id="@+id/num6"
                    style="@style/Button2"
                    android:text="6" />

                <Button
                    android:id="@+id/num3"
                    style="@style/Button2"
                    android:text="3" />

                <Button
                    android:id="@+id/point"
                    style="@style/Button2"
                    android:text="." />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/div"
                    style="@style/Button1"
                    android:text="/" />

                <Button
                    android:id="@+id/times"
                    style="@style/Button1"
                    android:text="X" />

                <Button
                    android:id="@+id/min"
                    style="@style/Button1"
                    android:text="-" />

                <Button
                    android:id="@+id/plus"
                    style="@style/Button1"
                    android:text="+" />

                <Button
                    android:id="@+id/equal"
                    style="@style/Button1"
                    android:text="=" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>